{{ 'base.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .artist-house-navigation {
    position: relative;
    min-height: {{ section.settings.section_height }}vh;
    background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('{{ section.settings.background_image | image_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .artist-house-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    background: transparent;
    z-index: 1000;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .artist-house-header-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    letter-spacing: 2px;
  }
{% endstyle %}

<div class="artist-house-navigation section-{{ section.id }}-padding">
  <header class="artist-house-header">
    <nav>
      <ul class="nav-menu">
        {% for block in section.blocks %}
          {% if block.type == 'navigation_item' %}
            <li>
              <a href="{{ block.settings.link | default: '#' }}" 
                 onclick="showContent('{{ block.settings.section_name | downcase }}')"
                 class="nav-link">
                {{ block.settings.title }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </nav>
    <div class="artist-house-header-center">{{ section.settings.header_text }}</div>
    <button class="menu-toggle" onclick="toggleMenu()">â˜°</button>
  </header>

  <main class="main-container">
    <div class="breadcrumb">
      <a href="#" onclick="goToRoom('front')">Front</a> > <span>Studio</span>
    </div>

    <div class="room-grid">
      {% assign room_names = 'Front,Studio,Lounge,Bedroom,Closet,Pool,Kitchen,Court,Garage' | split: ',' %}
      {% for room in room_names %}
        <div class="room-card{% if room == 'Studio' %} active{% endif %}" 
             data-room-name="{{ room }}" 
             onclick="goToRoom('{{ room | downcase }}')">
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_current_room_info %}
      <div class="current-room">
        <h2>{{ section.settings.current_room_title | default: 'Welcome to Artist House' }}</h2>
        <p>{{ section.settings.current_room_description | default: 'Navigate through different rooms using the interactive dots on the screen.' }}</p>
      </div>
    {% endif %}
  </main>
</div>

<script>
  // Initialize Artist House Navigation for this section
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof ArtistHouseNavigation !== 'undefined') {
      new ArtistHouseNavigation();
    }
  });

  // Shopify theme editor support
  if (typeof Shopify !== 'undefined' && Shopify.designMode) {
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        if (typeof ArtistHouseNavigation !== 'undefined') {
          new ArtistHouseNavigation();
        }
      }
    });
  }
</script>

